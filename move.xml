<?xml version="1.0" encoding="UTF-8"?>

<project name="Move WordPress" default="help" basedir="./">

	   <!-- Load the configuration file -->
    <property file="move.properties" />

<!--
-----------------------------------------------------------	
This will be a seperate build to move WordPress around:

On local
FTP
Git/SVN
Backups/SQL
Amazon/etc 	
Rsync

Also minify css/js/html will be here



-->

    <!-- FTP   uploads the whole thing !
-------------------------------------------------------------------------- -->

<target name="ftp.upload">
    <echo>Uploading files to FTP</echo>
    <ftpdeploy 
        host="${ftp.destination.host}"
        port="${ftp.destination.port}"
        username="${ftp.destination.username}"
        password="${ftp.destination.password}"
        dir="${ftp.destination.dir}"
        mode="${ftp.destination.mode}">
       <fileset refid="TheFiles" />
    </ftpdeploy>
    <echo>FTP Upload Finished!</echo>
</target>


    <!-- Display the available options 
-------------------------------------------------------------------- -->

 <target name="help" description="Displays the available options">

        <echo msg="Move options" />
        <echo msg="------------------" />
        
        <echo msg="$ phing move ftp.upload - Uploads files to FTP" />
        <echo msg="$ phing help - Displays the available options" />

        
    </target>

</project>	